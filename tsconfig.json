{
    "compilerOptions": {
        // "target": "ES2020",
        // "useDefineForClassFields": true,
        // "lib": ["ES2020", "DOM", "DOM.Iterable"],
        // "module": "ESNext",
        // "skipLibCheck": true,

        /* Bundler mode */
        "moduleResolution": "node",
        "module": "ESNext",
        "target": "ESNext",
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "types": [],
        "jsx": "react",
        "baseUrl": ".",
        "paths": {
          "@/*": ["./src/*"]
        },

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
    },
    "include": ["src"],
    "references": [{ "path": "./tsconfig.node.json" }]
}
